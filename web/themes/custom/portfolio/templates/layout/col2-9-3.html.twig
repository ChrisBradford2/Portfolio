{#
/**
 * @file
 * Default theme implementation for a media layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{{ attach_library('portfolio/node-header') }}
{{ attach_library('portfolio/node-project') }}
{{ attach_library('portfolio/slick') }}

{% if content %}
  <div{{ attributes.addClass('row', 'node-header') }}>

    {% if content.top %}
      <div {{ region_attributes.top.addClass('region--top') }}>
        <div class="header">
          <h1>{{ content.top.node_title }}</h1>
          <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i
                class="{{ content.top.field_icon.0['#icons'].0['#style'] }} {{ content.top.field_icon.0['#icons'].0['#name'] }}"></i>
            </div>
            <div class="divider-custom-line"></div>
          </div>
        </div>
      </div>
      {{ content.top|without('node_title', 'field_icon') }}
    {% endif %}

    <div{{ region_attributes.first.addClass('col-md-9') }}>
      {{ content.first.field_media }}
      <div class="divider-project"></div>
      {% if content.first.field_text_plain.0 %}
        <div class="under-media-full">
          {{ content.first.field_text_plain }}
          {{ content.first.field_list_text }}
          {{ content.first.field_date }}
        </div>
      {% else %}
        <div class="under-media">
          {{ content.first.field_list_text }}
          {{ content.first.field_date }}
        </div>
      {% endif %}
      {{ content.first.body }}
      {{ content.first.field_file }}
      {{ content.first.field_entity_reference_revision }}
      {{ content.first|without('field_media', 'field_text_plain','field_list_text','field_date','body','field_file','field_entity_reference_revision',) }}
    </div>

    <div{{ region_attributes.second.addClass('col-md-3', 'sidebar-project') }}>
      {{ content.second }}
    </div>

    {% if content.bottom %}
      <div {{ region_attributes.bottom.addClass('region--bottom') }}>
        {{ content.bottom }}
      </div>
    {% endif %}

  </div>
{% endif %}
